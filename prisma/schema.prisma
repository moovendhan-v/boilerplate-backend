datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Boilerplate {
  id            String     @id @default(cuid()) @map("_id")
  title         String
  description   String
  repositoryUrl String
  framework     String
  language      String
  tags          String[]
  stars         Int        @default(0)
  downloads     Int        @default(0)
  author        User       @relation("UserBoilerplates", fields: [authorId], references: [id])
  authorId      String
  likes         UserLikes[]
  files         File[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}


model User {
  id                String        @id @default(cuid()) @map("_id")
  email            String        @unique
  password         String
  name             String?
  role             String        @default("USER")
  boilerplates     Boilerplate[] @relation("UserBoilerplates")
  likes            UserLikes[]
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model UserLikes {
  id            String      @id @default(cuid()) @map("_id")
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  boilerplate   Boilerplate @relation(fields: [boilerplateId], references: [id])
  boilerplateId String
  createdAt     DateTime    @default(now())

  @@unique([userId, boilerplateId])
}

model File {
  id            String      @id @default(cuid()) @map("_id")
  name          String
  path          String
  content       String
  boilerplate   Boilerplate @relation(fields: [boilerplateId], references: [id])
  boilerplateId String
}